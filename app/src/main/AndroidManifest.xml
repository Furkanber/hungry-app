<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kodluyoruz.hungryapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name="com.kodluyoruz.hungryapp.HungryApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_hungry_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_hungry_logo_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.HungryApp">
        <activity android:name="com.kodluyoruz.hungryapp.ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>